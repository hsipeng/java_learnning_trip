package service;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import dao.UserDao;
import tx.TranscationManager;

@Service("userService")
public class UserServiceImpl implements UserService {
	@Resource
	private UserDao target;
	@Resource
	private TranscationManager tsm;
	@Override
	public void addUser() {
		try {
			tsm.begin();
			target.addUser();
			tsm.commit();
		} catch (Exception e) {
			tsm.rollback();
			e.printStackTrace();
		}
	}
	@Override
	public void updateUser() {
		try {
			tsm.begin();
			target.updateUser();();
			tsm.commit();
		} catch (Exception e) {
			tsm.rollback();
			e.printStackTrace();
		}
		
	}

}
