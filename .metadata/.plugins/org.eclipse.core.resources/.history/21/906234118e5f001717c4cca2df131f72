<script type="text/javascript">
function showList(){
	var clist ='<%=session.getAttribute("clist") %>';
	console.log(clist);
	var commentslist = document.getElementById("commentsList");
	var p="";
	for(var i=1;i< clist.size;i++){
		p+="<p>"+clist[i]+"<p>";
	}
	console.log(p);
	commentslist.innerHTML=p;
}
</script>
